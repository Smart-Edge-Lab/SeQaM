# Use the official Python image from the Docker Hub
FROM python:3.12-slim

# Set the working directory
WORKDIR /app

# Copy the requirements.txt file and install the dependencies
COPY build/requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copy the Configuration and ModuleManagement directories
COPY Configuration ./Configuration

# Copy the Utilities and ModuleManagement directories
COPY Utilities ./Utilities
COPY ModuleManagement ./ModuleManagement

# Copy the CommandTranslator module
COPY Modules/EventOrchestrator ./Modules/EventOrchestrator

ARG VERSION
ENV VERSION=$VERSION

# Specify the command to run the EventOrchestratorModule.py
CMD ["python", "./Modules/EventOrchestrator/EventOrchestratorModule.py"]
